<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.Subject" table="subjects" 
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="11" />
            <generator class="identity" />
		</id>
		<property name="name" type="java.lang.String">
            <column name="name" length="100"/>
        </property>
        <property name="detail" type="java.lang.String">
            <column name="detail"/>
        </property>
        
        <set name="subjectCourses" inverse="true" lazy="false" cascade="all">
        	<key column="subject_id" not-null="true" />
            <one-to-many class="framgiavn.project01.web.model.SubjectCourse" />
        </set>    
        <set name="tasks" inverse="true" lazy="false" cascade="all">
        	<key column="subject_id" not-null="true" />
            <one-to-many class="framgiavn.project01.web.model.Task" />
        </set>    
	</class>
	<query name="SubjectCourse.SelectSCById">
    	select subject  
    	from Subject subject
    	left join subject.subjectCourses
    	where course_id=:id
    </query>
    <query name="Task.SelectTaskBySubjectId">
    	select task 
    	from Task task
    	where task.subject_id=:id
    </query>
	<query name="Subject.SelectSubjectById">
    	select subject  
    	from Subject subject
    	where subject.id = :id
    </query>
    
    <query name="Subject.SelectSubjectAll">
    	select subject  
    	from Subject subject
    </query>
    
    <query name="Subject.DeleteSubjectById">
    	delete from Subject subject where subject.id = :id
    </query>
</hibernate-mapping>